{# src/Perso/GalerieBundle/Resources/views/Galerie/addPhoto.html.twig #}
{% extends "PersoGalerieBundle::layout.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        [class*="col"] { margin-bottom: 15px; }
        .select2-no-results { display:none; }
        #btn_submit { margin-top:20px; }
    </style>
    <link href="{{ asset('select2-3.5.4/select2.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}

    {% block titlePage %}
        <div class="h3">{{ 'proposeNewPic'|trans }}</div>
    {% endblock %}

    <div class="row">
        <div class="thumbnail col-md-4 col-md-offset-4">
            <div class="well">
                <form method="post" {{ form_enctype(form) }}>
                    {{ form_widget(form) }}
                    <input type="submit" value="{{ 'form.validate'|trans }}" id="btn_submit" class="btn btn-primary" />
                </form>
            </div>
        </div>
    </div>
<a href="{{ path('perso_galerie_homepage') }}">{{ 'backList'|trans }}</a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('select2-3.5.4/select2.min.js') }}"></script>
    <script src="{{ url('bazinga_jstranslation_js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#perso_galeriebundle_photo_myTags').select2({
                // specify tags
                tags: [],
                placeholder: Translator.trans('placeholderMotsCles')
            });
            $(".select2-results").css('display','none');
            //$(".select2-container").css('visibility','hidden');
        });
    </script>
{%  endblock %}
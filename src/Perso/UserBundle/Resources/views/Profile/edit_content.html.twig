

{% trans_default_domain 'FOSUserBundle' %}



{% block titlePage %}
    <div class="h3">{{ 'infosProfile'|trans }}</div>
{% endblock %}


<div  class="row">
    <div class="col-xs-offset-2 col-xs-8">
        <form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal fos_user_profile_edit">


            {% if app.user.profilePicturePath is null %}
                <div class="avatar avatarEmpty img-circle centered"></div>
            {% else %}
                <div style="background-image:url({{ asset(directory_avatars ~ '/' ~ app.user.profilePicturePath) }})" class="avatar img-circle centered" title="{{ 'form.photoUser'|trans }}"></div>
            {% endif %}


            <div class="form-group">
                {{ form_errors(form.profilePictureFile) }}
                <div class="input-group centre">
                    <span class="infoBg-info">{{ 'form.photoUser'|trans }}</span>
                    {{ form_widget(form.profilePictureFile) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_errors(form.email) }}
                <div class="input-group centre">
                    <label class="input-group-addon">{{ 'form.email'|trans }}</label>
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control_profile'} }) }}

                </div>
            </div>

            <div class="form-group">
                {{ form_errors(form.first_name) }}
                <div class="input-group centre">
                    <label class="input-group-addon">{{ 'firstName'|trans }}</label>
                    {{ form_widget(form.first_name, { 'attr': {'class': 'form-control_profile'} }) }}

                </div>
            </div>

            <div class="form-group">
                {{ form_errors(form.last_name) }}

                <div class="input-group centre">
                    <label class="input-group-addon">{{ 'lastName'|trans }}</label>
                    {{ form_widget(form.last_name, { 'attr': {'class': 'form-control_profile'} }) }}

                </div>
            </div>

            <div class="form-group">
                {{ form_errors(form.ddn) }}

                <div class="input-group centre">
                    <label class="input-group-addon">{{ 'ddn'|trans }}</label>
                    {{ form_widget(form.ddn, { 'attr': {'class': 'form-control_profile'} }) }}

                </div>
            </div>


            <div class="form-group">
                {{ form_errors(form.current_password) }}
                <span class="infoBg-info">{{ 'txtConfirmPass'|trans }}</span>
                <div class="input-group centre">
                    <label class="input-group-addon">{{ 'monPass'|trans }}</label>
                    {{ form_widget(form.current_password, { 'attr': {'class': 'form-control_profile'} }) }}

                </div>
            </div>

            {{ form_rest(form) }}

            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
                <button class="btn btn-default" id="btnChgPass" type="button" >{{ 'chgPassLink'|trans }}</button>
            </div>

        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-1.11.2.min.js"></script>
<script>
    $(document).ready(function() {
        $("#btnChgPass").on("click", function () {
            window.location="{{ path('fos_user_change_password') }}";
        });
    });
</script>

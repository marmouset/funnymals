{% trans_default_domain 'FOSUserBundle' %}

<style>
    .input-group-addon {
        width:150px;
    }
    .input-group {
        width:450px;
    }
</style>

<div class="h3">{{ 'infosProfile'|trans }}</div>

<form method="post" class="form-horizontal col-xs-offset-3 col-xs-6">

    <div class="form-group input-group centre" style="width:300px;">
        <label class="input-group-addon">{{ 'profile.show.username'|trans }} :</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ user.username }}" />
    </div>


    <div class="form-group input-group centre">
        <label class="input-group-addon">{{ 'firstName'|trans }} :</label>
        <div class="form-control"> {{ user.firstName }}</div>
    </div>

    <div class="form-group input-group centre">
        <label class="input-group-addon">{{ 'lastName'|trans }} :</label>
        <div class="form-control"> {{ user.lastName }}</div>
    </div>

    <div class="form-group input-group centre">
        <label class="input-group-addon">{{ 'profile.show.email'|trans }} :</label>
        <div class="form-control"> {{ user.email }}</div>
    </div>

    <div class="form-group input-group centre">
        <label class="input-group-addon">{{ 'lastName'|trans }} :</label>
        <div class="form-control"> {{ user.lastName }}</div>
    </div>

    <a class="btn btn-primary" href="{{ path('fos_user_profile_edit') }}">Modifier mes informations</a>
</form>
